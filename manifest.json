{
  "manifest_version": 3,
  "name": "Coursera QA Assistant",
  "version": "1.0",
  "description": "Ask questions about Coursera course content",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.coursera.org/*",
     "http://127.0.0.1:5000/*",
    "https://generativelanguage.googleapis.com/*"
  ]
}